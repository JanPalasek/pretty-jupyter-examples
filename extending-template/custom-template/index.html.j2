{%- extends "pj/index.html.j2" -%}

{% block main_container_start %}
<header id="pageHeader">
    <hr />
    {% set metadata = resources.pj_metadata %}
    <h1 class="title">{{ metadata.title | e }}</h1>
    {% if "author" in metadata %}
    <h4>{{ metadata.author | e }}</h4>
    {% endif %}
    {% if "date" in metadata %}
    <h4>{{ metadata.date | e }}</h4>
    {% endif %}
    <hr />
</header>
{% endblock main_container_start %}

{% block page_header %}
{% endblock page_header %}

{% block main_container_end %}
<footer>
<hr id="firstHr" />
<h4>Made By Jan Palasek</h4>
<hr id="secondHr" />
</footer>
{% endblock main_container_end %}


{% block notebook_css %}
    {{ super() }}

    <style>
        header {
            width: 100%;
            text-align: center;
            margin: 25px 10px 25px 10px;
        }

        
        footer {
            width:1200px;
            text-align: center;
            position: fixed;
            bottom: 0;
            background-color: white;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        #firstHr {
            padding-top: 0;
            margin-top: 0;
        }

        #secondHr {
            padding-bottom: 0;
            margin-bottom: 0;
        }

        .nav-pills>li.active>a,
        .nav-pills>li.active>a:hover,
        .nav-pills>li.active>a:focus {
        background-color: black;
        }
        a,
        a:hover {
        color: black;
        }
        .list-group-item.active,
        .list-group-item.active:hover,
        .list-group-item.active:focus {
        background-color: black;
        border-color: black;
        }
        .nav-tabs>li.active>a, .nav-tabs>li.active>a:focus {
        border: none;
        -webkit-box-shadow: inset 0 -2px 0 black;
        box-shadow: inset 0 -2px 0 black;
        color: black;
        }
        .nav-tabs>li.active>a:hover, .nav-tabs>li.active>a:focus:hover {
        border: none;
        color: black;
        }
        .nav-tabs>li>a:hover, .nav-tabs>li>a:focus:hover {
        background-color: transparent;
        -webkit-box-shadow: inset 0 -2px 0 black;
        box-shadow: inset 0 -2px 0 black;
        color: black;
        }
    </style>

{% endblock notebook_css %}
